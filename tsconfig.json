{
	"compilerOptions": {
		"lib": ["ES2021"],
		"target": "ES2021",
		"moduleResolution": "node",
		"outDir": "dist",
		"strict": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"module": "ES2022",
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"paths": {
			"@sof-template-backend/core/*": ["./packages/core/src/*"]
		}
	}
}
